<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blue_round"
        android:backgroundTint="@color/accentLight"
        android:elevation="5dp"
        android:padding="15dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/list_image"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:padding="10dp"
            android:src="@drawable/ic_burn_button"
            android:tint="@android:color/white"
            android:background="@drawable/fire_severity_background"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/occurrence_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/occurrence_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:padding="5dp"
            android:textSize="25dp"/>
    </LinearLayout>
</RelativeLayout>